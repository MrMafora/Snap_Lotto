{
  "workflows": [
    {
      "name": "Start application",
      "tasks": [
        {
          "task": "packager.installForAll"
        },
        {
          "task": "shell.exec",
          "args": "./start_app_with_proxy.sh",
          "waitForPort": 8080,
          "description": "Start the application server on port 5000 with port proxy to 8080"
        }
      ],
      "metadata": {
        "agentRequireRestartOnSave": false
      }
    },
    {
      "name": "Port Proxy",
      "tasks": [
        {
          "task": "shell.exec",
          "args": "python port_proxy.py",
          "waitForPort": 8080,
          "description": "Run the Flask-based port proxy on port 8080"
        }
      ],
      "metadata": {
        "agentRequireRestartOnSave": false
      }
    }
  ]
}